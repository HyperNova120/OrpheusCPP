{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: cl.exe build active file",
      "command": "cl.exe",
      "args": [
        "/Zi",
        "/EHsc",
        "/nologo",
        "/Fe${fileDirname}\\out\\build\\win64\\Debug\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    { 
        "label": "cmake debug build",
        "type": "shell",
        "windows": 
        {
            "command": "cmake --build ${workspaceFolder}/out/build/win64 --config Debug"
        }    
    },
    { 
        "label": "cmake release build",
        "type": "shell",
        "windows": 
        {
            "command": "cmake --build ${workspaceFolder}/out/build/win64 --config Release"
        }    
    }
  ],
  "version": "2.0.0"
}
